{
  "compilerOptions": {
    "incremental": true,
    "outDir": "./compiled",
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "declaration": false,
    "sourceMap": false,
    "types": [
      "jest",
      "node",
      "puppeteer",
      "jest-environment-puppeteer"
    ]
  },
  "include": [
    "./spec/**/*.ts",
    "./src/**/*.ts"
  ]
}