{
  "compilerOptions": {
    "outDir": "./compiled",
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "declaration": false,
    "sourceMap": true
  },
  "include": [
    "./src/**/*.ts",
    "./spec/**/*.ts"
  ]
}